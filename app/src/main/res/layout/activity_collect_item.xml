<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/activity_collect_item_img"
                android:layout_width="@dimen/dp90"
                android:layout_height="@dimen/dp90"
                android:layout_margin="@dimen/dp10"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_collect_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="新会陈皮普洱茶熟茶叶"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/activity_collect_item_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp05"
                    android:gravity="center_vertical"
                    android:text="【买即送体验包装4包+精美茶具一套】送礼自饮皆宜 香气浓郁口"
                    android:textColor="@color/fm_shopping_adapter_detial"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_collect_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="¥168.0"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/activity_collect_item_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp05"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_weight="1"
                        android:text="¥105.0"
                        android:textColor="@color/bt_tx_color" />

                    <TextView
                        android:id="@+id/activity_collect_item_addshoppcar"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp30"
                        android:layout_marginTop="@dimen/dp20"
                        android:background="@color/at_merchant_item_bt"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp15"
                        android:paddingStart="@dimen/dp15"
                        android:text="@string/add_shopp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_collect_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp10"
            android:paddingEnd="@dimen/dp15"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:text="2017年/12月/31日"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12" />

        <include layout="@layout/separet_view" />
    </LinearLayout>


</LinearLayout>