<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fm_my_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fm_classify_left_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_top_fill" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200"
            android:layout_marginTop="@dimen/dp05"
            android:background="@mipmap/top">

            <shopping.gd.com.yw.gdshoppingmail.view.ImageViewRoundOval
                android:id="@+id/fm_my_imgro"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp30"
                android:scaleType="fitXY"
                android:src="@mipmap/head" />

            <ImageView
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp10"
                android:src="@mipmap/gwc" />

            <LinearLayout
                android:id="@+id/fm_my_name_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fm_my_imgro"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fm_my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/transparent"
                    android:drawableLeft="@mipmap/gwc"
                    android:text="@string/wechat_pay"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/my_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fm_my_obligation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTop="@mipmap/gwc"
                    android:text="@string/obligation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

                <Button

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTop="@mipmap/gwc"
                    android:text="@string/consignment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTop="@mipmap/gwc"
                    android:text="@string/receiving"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTop="@mipmap/gwc"
                    android:text="@string/refund"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableTop="@mipmap/gwc"
                    android:text="@string/all_orders"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingEnd="@dimen/dp10"
            android:paddingStart="@dimen/dp10">

            <LinearLayout
                android:id="@+id/fm_my_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/my_collent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/my_evlaute"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />

            <LinearLayout
                android:id="@+id/fm_my_integral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/my_integral"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />

            <LinearLayout
                android:id="@+id/fm_my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/my_message"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />

            <LinearLayout
                android:id="@+id/fm_my_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/my_setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:src="@mipmap/gwc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_weight="1"
                    android:text="@string/reation_service"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp16" />

                <ImageView
                    android:layout_width="@dimen/dp45"
                    android:layout_height="@dimen/dp45"
                    android:padding="@dimen/dp15"
                    android:src="@mipmap/gwc" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/fm_classify_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verion_code"
                android:textColor="@color/my_view"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textColor="@color/my_view"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>