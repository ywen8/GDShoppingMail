<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp65"
    android:background="@color/home_bg"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/title_top_fill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:background="@color/colorPrimary" />

        <Button
            android:layout_width="0dp"
            android:layout_height="@dimen/dp30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp13"
            android:layout_marginRight="@dimen/dp45"
            android:layout_weight="0.8"
            android:background="@drawable/button_border_cor"
            android:drawableLeft="@mipmap/fl"
            android:drawablePadding="@dimen/dp05"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dp20"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
    <View
        android:background="@color/fm_home_shopping_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>
</LinearLayout>